<%-include('../header_footer/header')%>

<header class="masthead" style="background-image: url('assets/img/about-bg.jpg')">
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="page-heading">
                    <h1>Login Here</h1>
                </div>
            </div>
        </div>
    </div>
</header>

<main class="mb-4">
    <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <!-- <p>Want to get in touch? Fill out the form below to send me a message and I will get back to you as soon as possible!</p> -->
                <div class="my-5">
                    <form action="/signin" method="post" id="contactForm" data-sb-form-api-token="API_TOKEN">
                        
                        <% if(message.length>0) { %>
                            <div class="alert alert-success">
                              <%= message %>
                            </div>
                            <% } %>
                            <br><br>
                        <div class="form-floating">
                            <input class="form-control" name="email" id="email" value="<%= data.email %>" type="email" placeholder="Enter Your Email..." data-sb-validations="required,email" />
                            <label for="email">Email address</label>
                        </div>
                        <div class="form-floating">
                            <input class="form-control" name="password" id="password" value="<%= data.password %>" type="password" placeholder="Enter Your Password..." data-sb-validations="required" />
                            <label for="password">Password</label>
                        </div>
                        <br><br>
                        <span><input type="checkbox" name="rememberme">Remember Me</span>
                        <!-- Submit Button-->
                        <center>
                            <button class="btn btn-primary text-uppercase" type="submit" style="margin-top: 20px;">LOGIN</button>
                        </center>
                        <br><br>
                        <p><span style="color: red;">*</span>If you are not Registered yet, <a href="/register" class="btn_reg">Click Here</a></p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>


<%-include('../header_footer/footer')%>